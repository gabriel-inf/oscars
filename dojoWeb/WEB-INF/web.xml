<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>OSCARS Web Interface</display-name>
    <description>
      Web based interface to OSCARS Reservation System
    </description>

    <!-- Servlets in webapp -->

    <servlet>
        <servlet-name>AuthenticateUser</servlet-name>
        <servlet-class>net.es.oscars.dojoServlets.AuthenticateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateReservationForm</servlet-name>
        <servlet-class>net.es.oscars.dojoServlets.CreateReservationForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserQuery</servlet-name>
        <servlet-class>net.es.oscars.dojoServlets.UserQuery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserModify</servlet-name>
        <servlet-class>net.es.oscars.dojoServlets.UserModify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAddForm</servlet-name>
        <servlet-class>net.es.oscars.dojoServlets.UserAddForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdd</servlet-name>
        <servlet-class>net.es.oscars.dojoServlets.UserAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogout</servlet-name>
        <servlet-class>net.es.oscars.dojoServlets.UserLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticateUser</servlet-name>
        <url-pattern>/servlet/AuthenticateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateReservationForm</servlet-name>
        <url-pattern>/servlet/CreateReservationForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserQuery</servlet-name>
        <url-pattern>/servlet/UserQuery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserModify</servlet-name>
        <url-pattern>/servlet/UserModify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddForm</servlet-name>
        <url-pattern>/servlet/UserAddForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdd</servlet-name>
        <url-pattern>/servlet/UserAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogout</servlet-name>
        <url-pattern>/servlet/UserLogout</url-pattern>
    </servlet-mapping>

</web-app>
