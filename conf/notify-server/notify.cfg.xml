<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <!-- MySQL section -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver
        </property>
        <property name="connection.url">jdbc:mysql:///notify</property>

        <property name="query.substitutions">yes 'Y', no 'N'</property>
        <!-- <property name="format_sql">true</property> -->
        <!-- <property name="show_sql">true</property> -->
        <property name="max_fetch_depth">1</property>
        <property name="hibernate.query.factory_class">org.hibernate.hql.classic.ClassicQueryTranslatorFactory</property>
        <property name="transaction.factory_class">
            org.hibernate.transaction.JDBCTransactionFactory</property>
        <property name="current_session_context_class">thread</property>

        <!-- connection pool section -->
	<!-- See http://www.mchange.com/projects/c3p0/index.html before
	     making any changes -->
        <property name="hibernate.c3p0.acquire_increment">3</property>
	<property name="hibernate.c3p0.idle_test_period">3600</property>
	<property name="hibernate.c3p0.timeout">3500</property>
	<property name="hibernate.c3p0.max_size">20</property>
	<property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.min_size">5</property>

	<!-- from http://kobyleha.com/en/programming/java/java_hibernate_broken_pipe_eng -->
	<property name="hibernate.c3p0.preferredTestQuery">select 1;</property>
	<property name="connection.autoReconnect">true</property>
	<property name="connection.autoReconnectForPools">true</property>
	<property name="connection.is-connection-validation-required">true</property>
        <!-- miscellaneous settings section -->
        <!-- enable batch updates even for versioned data -->
        <property name="jdbc.batch_versioned_data">true</property>
        <property name="jdbc.use_streams_for_binary">true</property>
        <!-- use JDBC 3 PreparedStatement.getGeneratedKeys for id of row -->
        <property name="jdbc.use_get_generated_keys">true</property>
        <!-- set a prefix for cache region names -->
        <property name="cache.region_prefix">hibernate.test</property>
        <property name="cache.provider_class">
                  org.hibernate.cache.HashtableCacheProvider</property>
        
        <mapping resource="net/es/oscars/notify/Publisher.hbm.xml"/>
        <mapping resource="net/es/oscars/notify/Subscription.hbm.xml"/>
        <mapping resource="net/es/oscars/notify/SubscriptionFilter.hbm.xml"/>
        
    </session-factory>
</hibernate-configuration>
