<junoscript version="1.0" release="7.3">
<rpc><lock-configuration /></rpc>
<rpc>
    <load-configuration>
        <configuration>
            <interfaces>
                <interface>
                    <name><user-var>interface_a</user-var></name>
                    <unit>
                        <name><user-var>vlan_id</user-var></name>
                        <description><user-var>resv-id</user-var><txt>:</txt><user-var>bandwidth</user-var><txt>:oscars-connection:show:circuit-intercloud</txt></description>
                        <encapsulation>vlan-ccc</encapsulation>
                        <vlan-id><user-var>vlan_id</user-var></vlan-id>
                        <family>
                            <ccc>
                                <filter>
                                    <input><user-var>resv-id</user-var></input>
                                </filter>
                            </ccc>
                        </family>
                    </unit>
                </interface>
                <interface>
                    <name><user-var>interface_b</user-var></name>
                    <unit>
                        <name><user-var>vlan_id</user-var></name>
                        <description><user-var>resv-id</user-var><txt>:</txt><user-var>bandwidth</user-var><txt>:oscars-connection:show:circuit-intercloud</txt></description>
                        <encapsulation>vlan-ccc</encapsulation>
                        <vlan-id><user-var>vlan_id</user-var></vlan-id>
                        <family>
                            <ccc>
                                <filter>
                                    <input><user-var>resv-id</user-var></input>
                                </filter>
                            </ccc>
                        </family>
                    </unit>
                </interface>
            </interfaces>
            <protocols>
                <connections>
                    <interface-switch>
                        <name><user-var>resv-id</user-var></name>
                        <interface>
                            <name><user-var>interface_a</user-var><txt>.</txt><user-var>vlan_id</user-var></name>
                        </interface>
                        <interface>
                            <name><user-var>interface_b</user-var><txt>.</txt><user-var>vlan_id</user-var></name>
                        </interface>
                    </interface-switch>
                </connections>
            </protocols>
            <firewall>
                <policer>
                    <name><user-var>resv-id</user-var></name>
                    <if-exceeding>
                        <bandwidth-limit><user-var>bandwidth</user-var></bandwidth-limit>
                        <burst-size-limit><user-var>policer_burst-size-limit</user-var></burst-size-limit>
                    </if-exceeding>
                    <then>
                        <forwarding-class>scavenger-service</forwarding-class>
                    </then>
                </policer>
                <family>
                    <ccc>
                        <filter>
                            <name><user-var>resv-id</user-var></name>
                            <interface-specific/>
                            <term>
                                <name><user-var>resv-id</user-var></name>
                                <then>
                                    <policer><user-var>resv-id</user-var></policer>
                                    <count><user-var>resv-id</user-var></count>
                                    <forwarding-class>expedited-forwarding</forwarding-class>
                                    <accept/>
                                </then>
                            </term>
                        </filter>
                    </ccc>
                </family>
            </firewall>
        </configuration>
    </load-configuration>
</rpc>
<rpc><commit-configuration /></rpc>
<rpc><unlock-configuration /></rpc>
</junoscript>
