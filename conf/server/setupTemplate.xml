<?xml version="1.0" encoding="us-ascii"?>
<junoscript version="1.0" release="7.3">

<rpc><lock-configuration /></rpc>
<rpc>
  <load-configuration>
    <configuration>
      <protocols>
        <mpls>
          <label-switched-path>
            <name><user-var>name</user-var></name>
            <from><user-var>from</user-var></from>
            <to><user-var>to</user-var></to>
            <metric>65535</metric>
            <bandwidth><user-var>bandwidth</user-var></bandwidth>
            <class-of-service>
              <user-var>lsp_class-of-service</user-var>
            </class-of-service>
            <no-cspf/>
            <setup-priority>
              <user-var>lsp_setup-priority</user-var>
            </setup-priority>
            <reservation-priority>
              <user-var>lsp_reservation-priority</user-var>
            </reservation-priority>
            <description>
              <user-var>lsp_description</user-var>
            </description>
            <primary optional="yes">
              <name><user-var>name</user-var></name>
            </primary>
          </label-switched-path>

          <!-- Note that this is an optional section, used when an
          explicit path is given.  In this case, the specification of the
          path element must be referenced by the <primary> label in the
          above section.  Each hop in the path is enclosed within a <name>
          element within a <path-list> element.  These elements are added
          programmatically. -->
          <path optional="yes">
             <name><user-var>name</user-var></name>
             <!--
             <path-list>
                 <name><user-var>hop1-addr</user-var></name>
             </path-list>
             ...
             <path-list>
                 <name><user-var>hopN-addr</user-var></name>
             </path-list>
             -->
          </path>
        </mpls>
      </protocols>
      <firewall>
        <policer>
          <name><user-var>name</user-var></name>
          <filter-specific/>
          <if-exceeding>
            <bandwidth-limit>
              <user-var>bandwidth</user-var>
            </bandwidth-limit>
            <burst-size-limit>
                <user-var>policer_burst-size-limit</user-var>
            </burst-size-limit>
          </if-exceeding>
          <then>
            <discard/>
          </then>
        </policer>
        <family>
          <inet>
            <filter>
              <name><user-var>internal_interface_filter</user-var></name>
              <term>
                <name><user-var>name</user-var></name>
                <from>
                  <source-address>
                    <user-var>source-address</user-var>
                  </source-address>
                  <destination-address>
                    <user-var>destination-address</user-var>
                  </destination-address>
                  <dscp optional="yes"><user-var>dscp</user-var></dscp>
                  <protocol optional="yes">
                    <user-var>protocol</user-var>
                  </protocol>
                  <source-port optional="yes">
                    <user-var>source-port</user-var>
                  </source-port>
                  <destination-port optional="yes">
                    <user-var>destination-port</user-var>
                  </destination-port>
                </from>
                <then>
                  <policer><user-var>name</user-var></policer>
                  <count><user-var>name</user-var></count>
                  <forwarding-class>expedited-forwarding</forwarding-class>
                  <routing-instance>
                    <user-var>name</user-var>
                  </routing-instance>
                </then>
              </term>
              <term insert="after" name="firewall_filter_marker">
                <name><user-var>name</user-var></name>
              </term>
            </filter>
            <filter>
              <name><user-var>external_interface_filter</user-var></name>
              <term>
                <name><user-var>name</user-var></name>
                <from>
                  <source-address>
                    <user-var>source-address</user-var>
                  </source-address>
                  <destination-address>
                    <user-var>destination-address</user-var>
                  </destination-address>
                  <dscp optional="yes"><user-var>dscp</user-var></dscp>
                  <protocol optional="yes">
                    <user-var>protocol</user-var>
                  </protocol>
                  <source-port optional="yes">
                    <user-var>source-port</user-var>i
                  </source-port>
                  <destination-port optional="yes">
                    <user-var>destination-port</user-var>
                  </destination-port>
                </from>
                <then>
                  <policer><user-var>name</user-var></policer>
                  <count><user-var>name</user-var></count>
                  <forwarding-class>expedited-forwarding</forwarding-class>
                  <routing-instance>
                    <user-var>name</user-var>
                  </routing-instance>
                </then>
              </term>
              <term insert="after" name="firewall_filter_marker">
                <name><user-var>name</user-var></name>
              </term>
            </filter>
          </inet>
        </family>
      </firewall>
      <routing-instances>
        <instance>
          <name><user-var>name</user-var></name>
          <instance-type>forwarding</instance-type>
          <routing-options>
            <static>
              <route>
                <destination>
                  <user-var>destination-address</user-var>
                </destination>
                <lsp-next-hop>
                  <name><user-var>name</user-var></name>
                </lsp-next-hop>
              </route>
            </static>
          </routing-options>
        </instance>
      </routing-instances>
    </configuration>
  </load-configuration>
</rpc>
<rpc><commit-configuration /></rpc>
<rpc><unlock-configuration /></rpc>

</junoscript>
