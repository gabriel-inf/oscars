<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Adapted from mapping created by the Middlegen Hibernate plugin 2.1.

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class name="net.es.oscars.aaa.Institution" table="institutions">
    <meta attribute="class-description" inherit="false">
       @hibernate.class table="institutions"
    </meta>

    <id name="id">
        <meta attribute="field-description">
           @hibernate.id generator-class="identity"
        </meta>
        <generator class="identity" />
    </id>

    <property name="name" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>    
    </property>

    <!-- Associations -->

    <set name="users" inverse="true" cascade="all, delete-orphan">
        <key column="institutionId" />
        <one-to-many class="net.es.oscars.aaa.User" />
    </set>

    <set name="sites" inverse="true" cascade="all, delete-orphan">
        <key column="institution" />
        <one-to-many class="net.es.oscars.aaa.Site" />
    </set>

</class>
</hibernate-mapping>
