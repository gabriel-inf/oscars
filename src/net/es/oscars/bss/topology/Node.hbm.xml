<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Adapted from mapping created by the Middlegen Hibernate plugin 2.1.

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class name="net.es.oscars.bss.topology.Node" table="nodes">
    <meta attribute="class-description" inherit="false">
       @hibernate.class table="nodes"
    </meta>

    <id name="id">
        <meta attribute="field-description">
           @hibernate.id generator-class="identity"
        </meta>
        <generator class="identity" />
    </id>

    <property name="valid" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>    
        <column sql-type="BOOLEAN" name="valid" />
    </property>

    <property name="topologyIdent" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>    
    </property>

    <!-- Associations -->

    <many-to-one name="domain" column="domainId"
	    class="net.es.oscars.bss.topology.Domain" not-null="true" />

    <set name="ports" inverse="true" cascade="all, delete-orphan">
        <key column="nodeId" />
        <one-to-many class="net.es.oscars.bss.topology.Port" />
    </set>

    <one-to-one name="nodeAddress"
	    class="net.es.oscars.bss.topology.NodeAddress"
	    property-ref="node" />

</class>
</hibernate-mapping>
