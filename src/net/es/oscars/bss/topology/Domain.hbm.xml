<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

<class name="net.es.oscars.bss.topology.Domain" table="domains">
    <meta attribute="class-description" inherit="false">
       @hibernate.class table="domains"
    </meta>

    <cache usage="read-write" />

    <id name="id">
        <meta attribute="field-description">
           @hibernate.id generator-class="identity"
        </meta>
        <generator class="identity" />
    </id>

    <property name="topologyIdent" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>
    </property>

    <property name="name" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>
    </property>

    <property name="url" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>
    </property>

    <property name="abbrev" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>
    </property>

    <property name="local" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>
    </property>

    <!-- Associations -->

    <set name="nodes" inverse="true" cascade="all, delete-orphan">
        <key column="domainId" />
        <one-to-many class="net.es.oscars.bss.topology.Node" />
    </set>

    <set name="paths" inverse="true" cascade="all, delete-orphan">
        <key column="nextDomainId" />
        <one-to-many class="net.es.oscars.bss.topology.Path" />
    </set>
<!-- 
    <one-to-one name="site"
        class="net.es.oscars.bss.topology.Site"
        property-ref="domain" />
-->
</class>
</hibernate-mapping>
