<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Adapted from mapping created by the Middlegen Hibernate plugin 2.1.

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class name="net.es.oscars.bss.topology.RouteElem" table="routeElems">
    <meta attribute="class-description" inherit="false">
       @hibernate.class table="routeElems"
    </meta>

    <id name="id">
        <meta attribute="field-description">
           @hibernate.id generator-class="identity"
        </meta>
        <generator class="identity" />
    </id>

    <property name="description" />
    
    <property name="strict" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>    
    </property>

    <!-- this is how Hibernate does a self-referential one-to-one
         relationship -->
    <many-to-one name="nextHop" cascade="all" column="nextHopId"
	   unique="true" />
	 
	 <!-- Associations -->
	<many-to-one name="domain" column="domainId"
	    class="net.es.oscars.bss.topology.Domain" not-null="false" />
	    
	<many-to-one name="node" column="nodeId"
	    class="net.es.oscars.bss.topology.Node" not-null="false" />
	    
	<many-to-one name="port" column="portId"
	    class="net.es.oscars.bss.topology.Port" not-null="false" />
	    
	<many-to-one name="link" column="linkId"
	    class="net.es.oscars.bss.topology.Link" not-null="false" />

</class>
</hibernate-mapping>
