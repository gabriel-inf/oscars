<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
<!--
    Adapted from mapping created by the Middlegen Hibernate plugin 2.1.

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class name="net.es.oscars.bss.topology.Path" table="paths">
    <meta attribute="class-description" inherit="false">
       @hibernate.class table="paths"
    </meta>

    <cache usage="read-write" />

    <id name="id" column="id">
        <meta attribute="field-description">
           @hibernate.id generator-class="identity"
        </meta>
        <generator class="identity" />
    </id>

    <property name="explicit" />

    <property name="pathSetupMode" />

    <property name="pathType" not-null="true" insert="false" update="false">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>
    </property>

    <property name="direction" />

    <property name="grouping" />

    <!-- Associations -->

    <many-to-one name="nextDomain" column="nextDomainId"
        class="net.es.oscars.bss.topology.Domain" not-null="false" />

    <list name="pathElems" cascade="all, delete-orphan">
        <key column="pathId" not-null="true" />
	<list-index column="seqNumber" />
        <one-to-many class="net.es.oscars.bss.topology.PathElem" />
    </list>

    <set name="layer2DataSet" inverse="true" cascade="all, delete-orphan">
        <key column="pathId" />
        <one-to-many class="net.es.oscars.bss.topology.Layer2Data" />
    </set>

    <set name="layer3DataSet" inverse="true" cascade="all, delete-orphan">
        <key column="pathId" />
        <one-to-many class="net.es.oscars.bss.topology.Layer3Data" />
    </set>

    <set name="mplsDataSet" inverse="true" cascade="all, delete-orphan">
        <key column="pathId" />
        <one-to-many class="net.es.oscars.bss.topology.MPLSData" />
    </set>

</class>
</hibernate-mapping>
