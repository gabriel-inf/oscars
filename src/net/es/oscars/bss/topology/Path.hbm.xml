<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Adapted from mapping created by the Middlegen Hibernate plugin 2.1.

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class name="net.es.oscars.bss.topology.Path" table="paths">
    <meta attribute="class-description" inherit="false">
       @hibernate.class table="paths"
    </meta>

    <id name="id" column="id">
        <meta attribute="field-description">
           @hibernate.id generator-class="identity"
        </meta>
        <generator class="identity" />
    </id>

    <property name="explicit" />
    
    <property name="pathSetupMode" />
    
    <!-- Associations -->

    <many-to-one name="pathElem" column="pathElemId"
	    class="net.es.oscars.bss.topology.PathElem" cascade="all"
	    not-null="true" unique="true" />

    <many-to-one name="nextDomain" column="nextDomainId"
	    class="net.es.oscars.bss.topology.Domain" not-null="false" />

    <one-to-one name="reservation" class="net.es.oscars.bss.Reservation"
	    property-ref="path" />

    <!-- The following are for optional associations
         between paths and layer-specific data -->

    <many-to-one name="layer2Data" column="layer2DataId"
	    class="net.es.oscars.bss.topology.Layer2Data" cascade="save-update"
	    unique="true" />

    <many-to-one name="layer3Data" column="layer3DataId"
	    class="net.es.oscars.bss.topology.Layer3Data" cascade="save-update"
	    unique="true" />

    <many-to-one name="mplsData" column="mplsDataId"
	    class="net.es.oscars.bss.topology.MPLSData" cascade="save-update"
	    unique="true" />

</class>
</hibernate-mapping>
