<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Adapted from mapping created by the Middlegen Hibernate plugin 2.1.

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class name="net.es.oscars.bss.topology.Port" table="ports">
    <meta attribute="class-description" inherit="false">
       @hibernate.class table="ports"
    </meta>

    <id name="id">
        <meta attribute="field-description">
           @hibernate.id generator-class="identity"
        </meta>
        <generator class="identity" />
    </id>

    <property name="valid" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>    
    </property>

    <property name="snmpIndex" not-null="true">
        <meta attribute="field-description">
           @hibernate.property not-null="true"
        </meta>    
    </property>

    <property name="name" />

    <property name="maximumCapacity" />

    <property name="maximumReservableCapacity" />

    <property name="granularity" />

    <property name="description" />

    <property name="alias" />

    <!-- Associations -->

    <many-to-one name="node" column="nodeId"
	    class="net.es.oscars.bss.topology.Node" not-null="true" />

    <set name="ipaddrs" inverse="true" cascade="save-update">
        <key column="portId" />
        <one-to-many class="net.es.oscars.bss.topology.Ipaddr" />
    </set>


</class>
</hibernate-mapping>
